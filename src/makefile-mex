#-----------------------------------------------------------------------------
# File    : makefile-mex
# Contents: build objects for use with matlab/mex
# Author  : Kristian Loewe
#-----------------------------------------------------------------------------
.SUFFIXES:                                   # remove built-in rules
MAKEFLAGS    += -r

CPUINFODIR  = ../../cpuinfo

CFLAGS      = -std=c99 \
              -Wall -Wextra -Wno-unused-parameter -Wconversion -Wshadow \
              -pedantic -fPIC
COPTIMFLAGS = -O2
DEFS        =

GCC_VERSION := $(shell expr `gcc -dumpversion | \
               sed -e 's/\.\([0-9][0-9]\)/\1/g' -e 's/\.\([0-9]\)/0\1/g' \
               -e 's/^[0-9]\{3,4\}$$/&00/'`)
GCC_GTEQ_47 := $(shell echo $(GCC_VERSION)\>=40700 | bc)
GCC_GTEQ_71 := $(shell echo $(GCC_VERSION)\>=70100 | bc)

ifeq ($(GCC_GTEQ_47),1)
  DOT_USEFMA ?= 1
endif

ifeq ($(GCC_GTEQ_71),1)
  DOT_USEAVX512 ?= 1
endif

OBJS = dot.o dot_naive.o dot_sse2.o dot_avx.o

ifeq ($(DOT_USEFMA),1)
  OBJS += dot_avxfma.o
else
  DEFS += -DDOT_NOFMA
endif

ifeq ($(DOT_USEAVX512),1)
  OBJS += dot_avx512.o
else
  DEFS += -DDOT_NOAVX512
endif

MATLABROOT  = $(dir $(realpath $(shell which matlab)))
MEX_FLAGS   = -largeArrayDims
MEXCC       = $(realpath $(MATLABROOT))/mex $(MEX_FLAGS)
#MEXCC       = $(realpath $(MATLABROOT))/mex $(MEX_FLAGS) GCC='/usr/bin/gcc-7'

OBJDIR      = ../obj/$(shell uname -m)/matlab
_DUMMY      := $(shell mkdir -p $(OBJDIR); mkdir -p $(OBJDIR))

#-----------------------------------------------------------------------------
# Build Objects
#-----------------------------------------------------------------------------
all: $(OBJS) dot_all.o

dot_naive.o:             $(OBJDIR)/dot_naive.o
$(OBJDIR)/dot_naive.o:   dot_naive.h
$(OBJDIR)/dot_naive.o:   dot_naive.c makefile-mex
	$(MEXCC) CFLAGS='$(CFLAGS)' \
    COPTIMFLAGS='$(COPTIMFLAGS)' \
    -DNDEBUG -c dot_naive.c -outdir $(OBJDIR)

dot_sse2.o:              $(OBJDIR)/dot_sse2.o
$(OBJDIR)/dot_sse2.o:    dot_sse2.h
$(OBJDIR)/dot_sse2.o:    dot_sse2.c makefile-mex
	$(MEXCC) CFLAGS='$(CFLAGS)' \
    COPTIMFLAGS='$(COPTIMFLAGS) -msse2' \
    -DNDEBUG -c dot_sse2.c -outdir $(OBJDIR)

dot_avx.o:               $(OBJDIR)/dot_avx.o
$(OBJDIR)/dot_avx.o:     dot_avx.h
$(OBJDIR)/dot_avx.o:     dot_avx.c makefile-mex
	$(MEXCC) CFLAGS='$(CFLAGS)' \
    COPTIMFLAGS='$(COPTIMFLAGS) -mavx -funroll-loops' \
    -DNDEBUG -c dot_avx.c -outdir $(OBJDIR)

dot_avxfma.o:            $(OBJDIR)/dot_avxfma.o
$(OBJDIR)/dot_avxfma.o:  dot_avx.h
$(OBJDIR)/dot_avxfma.o:  dot_avxfma.c dot_avx.c makefile-mex
	$(MEXCC) CFLAGS='$(CFLAGS)' \
    COPTIMFLAGS='$(COPTIMFLAGS) -mfma -mavx -funroll-loops' \
    -DNDEBUG -c dot_avxfma.c -outdir $(OBJDIR)

dot_avx512.o:            $(OBJDIR)/dot_avx512.o
$(OBJDIR)/dot_avx512.o:  dot_avx512.h
$(OBJDIR)/dot_avx512.o:  dot_avx512.c makefile-mex
	$(MEXCC) CFLAGS='$(CFLAGS)' \
    COPTIMFLAGS='$(COPTIMFLAGS) -mavx512f -mfma -funroll-loops' \
    -DNDEBUG -c dot_avx512.c -outdir $(OBJDIR)

dot.o:                   $(OBJDIR)/dot.o
$(OBJDIR)/dot.o:         dot.h $(CPUINFODIR)/src/cpuinfo.h
$(OBJDIR)/dot.o:         dot.c makefile-mex
	$(MEXCC) CFLAGS='$(CFLAGS)' \
    COPTIMFLAGS='$(COPTIMFLAGS)' $(DEFS) \
    -DNDEBUG -I$(CPUINFODIR)/src -c dot.c -outdir $(OBJDIR)

dot_all.o:               $(OBJDIR)/dot_all.o
$(OBJDIR)/dot_all.o:     $(OBJS)
	$(LD) -r -o $(OBJDIR)/dot_all.o $(addprefix $(OBJDIR)/, $(OBJS))
