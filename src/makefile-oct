#-----------------------------------------------------------------------------
# File    : makefile-oct
# Contents: build objects for use with octave/mex
# Author  : Kristian Loewe 
#           (with modifications for octave by Christina Rossmanith)
#-----------------------------------------------------------------------------
.SUFFIXES:                                   # remove built-in rules
MAKEFLAGS    += -r

CPUINFODIR  = ../../cpuinfo

CFLAGS      = -std=c99 \
              -Wall -Wextra -Wno-unused-parameter -Wconversion -Wshadow \
              -pedantic -fPIC
COPTIMFLAGS = -O2

MEXCC       = mkoctfile --mex

OBJDIR      = ../obj/$(shell uname -m)/octave
_DUMMY      := $(shell mkdir -p $(OBJDIR); mkdir -p $(OBJDIR))

#-----------------------------------------------------------------------------
# Build Objects
#-----------------------------------------------------------------------------
all: dot_naive.o dot_sse2.o dot_avx.o dot_avxfma.o dot.o

dot_naive.o:             $(OBJDIR)/dot_naive.o
$(OBJDIR)/dot_naive.o:   dot_naive.h
$(OBJDIR)/dot_naive.o:   dot_naive.c makefile-oct
	CFLAGS='$(CFLAGS) $(COPTIMFLAGS)' $(MEXCC) -DNDEBUG -c $< -o $@

dot_sse2.o:              $(OBJDIR)/dot_sse2.o
$(OBJDIR)/dot_sse2.o:    dot_sse2.h
$(OBJDIR)/dot_sse2.o:    dot_sse2.c makefile-oct
	CFLAGS='$(CFLAGS) $(COPTIMFLAGS) -msse2' $(MEXCC) -DNDEBUG -c $< -o $@

dot_avx.o:               $(OBJDIR)/dot_avx.o
$(OBJDIR)/dot_avx.o:     dot_avx.h
$(OBJDIR)/dot_avx.o:     dot_avx.c makefile-oct
	CFLAGS='$(CFLAGS) $(COPTIMFLAGS) -mavx -funroll-loops' $(MEXCC) \
    -DNDEBUG -c $< -o $@

dot_avxfma.o:            $(OBJDIR)/dot_avxfma.o
$(OBJDIR)/dot_avxfma.o:  dot_avx.h
$(OBJDIR)/dot_avxfma.o:  dot_avxfma.c dot_avx.c makefile-oct
	CFLAGS='$(CFLAGS) $(COPTIMFLAGS) -mfma -mavx -funroll-loops' $(MEXCC) \
    -DNDEBUG -c $< -o $@

dot.o:                   $(OBJDIR)/dot.o
$(OBJDIR)/dot.o:         dot.h $(CPUINFODIR)/src/cpuinfo.h
$(OBJDIR)/dot.o:         dot.c makefile-oct
	CFLAGS='$(CFLAGS) $(COPTIMFLAGS)' $(MEXCC) \
    -DNDEBUG -I$(CPUINFODIR)/src -c $< -o $@
